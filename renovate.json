{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "packagePatterns": ["next"],
      "groupName": "next"
    },
    {
      "packageNames": ["react", "react-dom"],
      "groupName": "react"
    }
  ],
  "labels": ["renovate"],
  "prHourlyLimit": 4,
  "prConcurrentLimit": 15,
  "rangeStrategy": "bump",
  "bumpVersion": null,
  "semanticCommits": true,
  "schedule": "before 8am on Monday"
}
